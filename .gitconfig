[core]
  editor = vim
  pager  = delta
[code]
  excludesFile = ~/.config/git/ignore
[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false
[alias]
    b     = branch
    bd    = branch --delete --force
    d     = diff
    ds    = diff --staged
    #d     = ! git diff --name-only --relative --diff-filter=d | xargs batdiff
    #ds    = ! git diff --staged --name-only --relative --diff-filter=d | xargs batdiff
    f     = fetch
    fp    = fetch --prune
    last  = log -n 1
    lol   = log --graph --decorate --pretty=oneline --abbrev-commit --all
    pushf = push --force-with-lease
    s     = status
    st    = status -uno
[delta]
  navigate = true
  light = false
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
